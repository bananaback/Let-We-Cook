@using LetWeCook.Services.DTOs
@model List<RecipeDTO>

<div class="w-80 rounded-lg bg-white p-6 shadow-lg">
    <h2 class="text-2xl font-semibold text-gray-800">Recipes You May Like</h2>
    <div class="mt-6 space-y-4">
        @foreach (var recipe in Model)
        {
            <div class="cursor-pointer overflow-hidden rounded-lg bg-gray-50 shadow transition-transform duration-300 hover:scale-105">
                <a href="@Url.Action("Details", "Recipe", new { area = "Cooking", id = recipe.Id })">
                    <img src="@recipe.RecipeCoverImage.Url" alt="@recipe.RecipeCoverImage.Alt" class="h-24 w-full object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800">@recipe.Title</h3>
                        <p class="text-sm text-gray-600">@recipe.CookTimeInMinutes mins | @recipe.Serving people</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
