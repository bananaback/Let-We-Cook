<div class="min-h-screen bg-gray-50 px-4 py-8">
    <div id="ingredient-id" class="hidden">@ViewData["IngredientId"]</div>

    <div class="mx-auto max-w-3xl rounded-lg bg-white p-6 shadow-lg">
        <!-- Header -->
        <h1 class="mb-6 cursor-pointer text-center text-3xl font-bold text-gray-800 transition hover:text-emerald-600"
            onclick="window.location.href='/'">
            Let We Cook
        </h1>

        <div class="my-4 font-semibold">
            Edit your ingredient
        </div>

        <!-- Ingredient Name -->
        <div class="mb-6">
            <label for="ingredient-name" class="mb-1 block text-sm font-medium text-gray-700">Ingredient Name</label>
            <input type="text" id="ingredient-name"
                   class="block w-full rounded-md border-gray-300 bg-gray-50 px-4 py-3 shadow-sm focus:ring-emerald-500 focus:border-emerald-500 sm:text-lg"
                   placeholder="Enter ingredient name" />
        </div>

        <!-- Ingredient Description -->
        <div class="mb-6">
            <label for="ingredient-description" class="mb-1 block text-sm font-medium text-gray-700">Ingredient Description</label>
            <input type="text" id="ingredient-description"
                   class="block w-full rounded-md border-gray-300 bg-gray-50 px-4 py-3 shadow-sm focus:ring-emerald-500 focus:border-emerald-500 sm:text-lg"
                   placeholder="Enter ingredient description" />
        </div>

        <!-- Cover Image -->
        <div class="mb-6">
            <label for="cover-image" class="mb-1 block text-sm font-medium text-gray-700">Cover Image</label>
            <button type="button"
                    class="open-cloudinary-btn block w-full rounded bg-emerald-50 px-4 py-2 text-sm font-semibold text-emerald-600 hover:bg-emerald-100 focus:ring-2 focus:ring-emerald-500">
                Upload Cover Image
            </button>
            <input type="hidden" id="cover-image-url" name="cover-image-url" />
            <div class="cover-image-preview preview-area flex-1 text-sm text-gray-500"></div>
        </div>

        <div class="py hidden px-2"></div>


        <div class="mb-6">
            <div id="sub-desc-container" class="flex w-full flex-col items-center justify-start gap-y-4">
                <!-- Sub-description items will be dynamically added here -->
            </div>
            <button id="add-sub-desc-btn"
                    type="button"
                    class="border-2 w-full rounded-md border-dashed border-emerald-600 py-4 text-lg font-semibold text-emerald-600 hover:bg-emerald-50 hover:border-emerald-700 hover:text-emerald-700 focus:outline-none">
                + Add Sub Description
            </button>
        </div>




        <!-- Submit Button -->
        <div>
            <button id="save-ingredient-btn"
                    class="inline-flex w-full justify-center rounded-md border border-transparent bg-emerald-600 px-6 py-3 text-lg font-medium text-white shadow-sm hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500">
                Save Ingredient
            </button>
        </div>
    </div>
</div>


@section Scripts {

    <script src="https://upload-widget.cloudinary.com/latest/global/all.js" type="text/javascript"></script>
    <script src="~/js/ingredient-edit.js"></script>
}
