@model string 
@{
    ViewData["Title"] = "Ingredient Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="w-3/4 max-w-md rounded-lg bg-white p-6 text-center shadow-lg">
        <h1 class="mb-4 pt-4 text-3xl font-bold text-red-600">Oops!</h1>
        <img src="https://img.icons8.com/ios-filled/100/ff3d00/error--v1.png" alt="Error" class="mx-auto mb-4" />
        <p class="mb-4 text-lg text-gray-700">@Model</p> <!-- Display the error message here -->
        <p class="mb-6 text-gray-500">Please check the URL or try searching for another ingredient.</p>

        <a href="@Url.Action("Index", "Ingredient", new { area = "Cooking" })" class="inline-block rounded-lg bg-blue-600 px-6 py-3 text-white transition duration-200 ease-in-out hover:bg-blue-500">
            Back to Ingredient List
        </a>
    </div>
</div>
