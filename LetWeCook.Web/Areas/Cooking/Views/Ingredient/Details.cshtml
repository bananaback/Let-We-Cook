<div class="mx-auto max-w-4xl rounded-lg bg-white p-8 shadow-lg">
    <!-- Navigation Buttons -->
    <div class="mb-6 flex justify-between">
        <a href="@Url.Action("Index", "Ingredient", new { area = "Cooking" })" class="inline-block rounded-lg bg-blue-600 px-4 py-2 text-white transition duration-200 ease-in-out hover:bg-blue-500">
            Back to Ingredient List
        </a>
        <a href="javascript:history.back()" class="inline-block rounded-lg bg-gray-300 px-4 py-2 text-gray-800 transition duration-200 ease-in-out hover:bg-gray-200">
            Back
        </a>
    </div>

    <!-- Ingredient Header -->
    <div class="text-center">
        <h1 class="mb-4 text-4xl font-bold text-gray-900">@Model.IngredientName</h1>
        <img src="@Model.CoverImageUrl" alt="@Model.IngredientName"
             class="mb-6 w-full rounded-md object-cover" style="height: auto;">
        <p class="mb-6 text-lg text-gray-700">@Model.IngredientDescription</p>
    </div>

    <!-- Ingredient Sections -->
    <div class="space-y-8">
        @foreach (var frame in Model.Frames)
        {
            if (!string.IsNullOrWhiteSpace(frame.MediaUrl))
            {
                <div class="relative">
                    <img src="@frame.MediaUrl" alt="Image for @Model.IngredientName section"
                         class="h-64 w-full rounded-lg object-cover shadow-md">
                </div>
            }
            if (!string.IsNullOrWhiteSpace(frame.TextContent))
            {
                <div class="rounded-lg bg-gray-50 p-6 shadow-sm">
                    <p class="text-lg text-gray-800">@frame.TextContent</p>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/ingredient-details.js"></script>
}
