@{
    Layout = "_ProfileLayout";
}

<!-- Main Content Area -->
<main class="flex-1 mt-16 h-full rounded-lg bg-gray-300 p-8">
    <div class="container mx-auto space-y-8">
        <!-- User Information Section -->
        <section class="rounded-lg bg-white p-6 shadow-md">
            <h2 class="mb-4 text-2xl font-semibold">User Information</h2>
            <div class="flex items-center space-x-4">
                <img class="border-2 h-20 w-20 rounded-full border-blue-500" src="~/images/home-dish-1.png" alt="User Profile Image" />
                <div>
                    <p class="text-lg font-medium">Username: @User.Identity!.Name</p>
                    <p>Email: user@example.com</p>
                    <p>Member since: January 2022</p>
                </div>
            </div>
        </section>

        <!-- Recent Activity Section -->
        <section class="rounded-lg bg-white p-6 shadow-md">
            <h2 class="mb-4 text-2xl font-semibold">Recent Activity</h2>
            <ul class="space-y-3">
                <li class="text-gray-700">Viewed Profile on October 25, 2024</li>
                <li class="text-gray-700">Updated Settings on October 24, 2024</li>
                <li class="text-gray-700">Sent a Message on October 23, 2024</li>
            </ul>
        </section>

        <!-- Settings Section -->
        <section class="rounded-lg bg-white p-6 shadow-md">
            <h2 class="mb-4 text-2xl font-semibold">Quick Settings</h2>
            <form method="post" action="/profile/update" class="space-y-4">
                <div>
                    <label for="email" class="block text-gray-700">Email</label>
                    <input type="email" id="email" name="email" class="mt-1 w-full rounded border p-2" value="user@example.com" />
                </div>
                <div>
                    <label for="username" class="block text-gray-700">Username</label>
                    <input type="text" id="username" name="username" class="mt-1 w-full rounded border p-2" value="Username123" />
                </div>
                <button type="submit" class="w-full rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">
                    Save Changes
                </button>
            </form>
        </section>
    </div>
</main>