@{
    Layout = "_ProfileLayout";
}

<!-- Main Content Area -->
<main class="flex-1 mt-16 h-full rounded-lg bg-gray-300 p-8">
    <div class="container mx-auto space-y-8">
        <!-- User Information Section -->
        <section class="rounded-lg bg-white p-6 shadow-md">
            <h2 class="mb-4 text-2xl font-semibold">User Information</h2>
            <div class="flex items-center space-x-4">
                <img class="border-2 h-20 w-20 rounded-full border-blue-500" src="~/images/home-dish-1.png" alt="User Profile Image" />
                <div>
                    <p class="text-lg font-medium">Username: @User.Identity!.Name (default)</p>
                    <p>Email: user@example.com</p>
                    <p>Member since: January 2022</p>
                </div>
            </div>
        </section>

        <!-- Settings Section -->
        <section class="rounded-lg bg-white p-6 shadow-md">
            <h2 class="mb-4 text-2xl font-semibold">Quick Settings</h2>
            <form method="post" action="/profile" class="space-y-4">
                <div>
                    <label for="username" class="block text-gray-700">Username</label>
                    <input type="text" id="username" name="username" class="mt-1 w-full rounded border p-2" value="" />
                </div>
                <div>
                    <label for="phone-number" class="block text-gray-700">Phone number</label>
                    <input type="tel" id="phone-number" name="phone-number" class="mt-1 w-full rounded border p-2" value="" />
                </div>
                <div class="flex flex-row items-center justify-between">
                    <label for="first-name" class="block text-gray-700">First Name</label>
                    <input type="text" id="first-name" name="first-name" class="mt-1 w-1/3 rounded border p-2" value="" />
                    <label for="last-name" class="block text-gray-700">Last Name</label>
                    <input type="text" id="last-name" name="last-name" class="mt-1 w-1/3 rounded border p-2" value="" />
                </div>
                <div>
                    <label for="age" class="block text-gray-700">Age</label>
                    <input type="number" id="age" name="age" min="16" max="120" class="mt-1 w-full rounded border p-2" value="" />
                </div>
                <div class="flex flex-row items-center gap-x-4 justify-start">
                    <label for="gender" class="block text-gray-700">Gender</label>
                    <select name="gender" id="gender" class="">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="others">Others</option>
                        <option value="rathernotsay">Rather not say</option>
                    </select>
                </div>
                <div>
                    <label for="address" class="block text-gray-700">Address</label>
                    <input type="text" id="address" name="address" class="mt-1 w-full rounded border p-2" value="" />
                </div>
                <button type="submit" class="w-full rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">
                    Save Changes
                </button>
            </form>
        </section>
    </div>
</main>